{% extends "../layout/admin.twig" %}

{% block content %}


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lighttrigger</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped table-responsive no-padding">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Destination light status</th>
                            <th class="action">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for lightTrigger in lightTriggers %}
                            <tr>
                                <td>{{ lightTrigger.title }}</td>
                                <td>{{ lightTrigger.lightStatus.state }}</td>
                                <td class="action">

                                    <a data-url="/admin/ajax_lighttrigger_edit/{{ lightTrigger._id }}"
                                       class="btn btn-default edit-button"
                                       data-id="{{ lightTrigger._id }}"><i class="ion ion-edit"></i></a>
                                    <a data-url="/admin/lighttrigger_delete/{{ lightTrigger._id }}" class="btn btn-danger delete-confirm"><i class="ion ion-trash-a"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No lighttriggers found</td>
                            </tr>
                        {% endfor %}
                        </tbody>


                    </table>

                    {% include 'admin/elements/light_trigger_select.twig' %}

                </div>
                <div class="box-footer">
                </div>
            </div>

        </div>


    </div>

    <style>
        .action {
            width: 95px;
        }

    </style>



    <script src="/js/lightTrigger.js"></script>


{% endblock %}
