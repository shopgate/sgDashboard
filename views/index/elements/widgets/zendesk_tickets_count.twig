            <h3 class="widget-value">
                {{ "{{ widget." ~ widget.key ~ "}}" }}
            </h3>
            <p>{{ widget.title }}</p>
        </div>
        <div class="icon">
            <i class="ion {{ widget.appearance.icon }}"></i>
        </div>

    </div>
</div>